  <!-- 我的队伍  -->
  <scroll-view scroll-y='true' class="list_cont" wx:elif="{{currentTab==0}}">
    <!--有队伍时主页  -->
    <view class='myteam dayList' wx:if="{{hasteam==true}}" hidden='{{invite}}'>
      <view class='content '>
        <view class='user'>
          <view class='user_infor '>
            <view class='user_name'>{{myTeam.team_name}}</view>
            <view class='user_rank'>第{{myTeam.rank}}名</view>
          </view>
        </view>
        <view class='u_data'>
          <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/button_invitation.png' class='button' bindtap='inviteFriend' data-team_id='{{myTeam.team_id}}'></image>
          <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/button_quit.png' class='button' bindtap='quitTeam' data-team_id='{{myTeam.team_id}}'></image>
        </view>
      </view>
      
      <view class='team'>
        <view class='team_head'>
          <view class='name_box'>
            <view class='team_name '>队员榜单</view>
            <view class='triangle'></view>
            <view class='triangle2'></view>
          </view>
        </view>
        
       
        <!-- 模块  -->
        <view class='content' wx:for='{{myTeam.list}}' wx:key=''>
          <view class='user'>
            <view class='num '>{{index+1}}</view>
            <image class='user_img ' src='{{item.headimgurl}}'></image>
            <view class='user_infor '>
              <view class='user_name'>{{item.nickname}}</view>
            </view>
          </view>
          <view class='u_data'>
            <view class='step'>{{item.sumstep}}</view>
            <view class='like'>
              <view>100</view>
              <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/aww_unselected.png'></image>
            </view>
          </view>          
        </view>
        <!-- 模块  -->
      </view>
    </view>
    <!-- 没有队伍时首页  -->
    <view class='myteam' wx:if="{{noteam==0}}" hidden='{{hasteam}}'>
      <view class='tips'>
        <view>您尚未加入任何队伍，</view>
        <view>是否加入他人队伍或自行创建队伍？</view>
      </view>
      <!-- 加入创建队伍按钮 -->
      <view class='btn_box'>
        <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/button_join.png' class='button2' bindtap='joinTeam'></image>
        <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/button_establish.png' class='button2' bindtap='setTeam'></image>
      </view>
      <!-- 团队赛简介  -->
      <view class='teamRaceIntro'>
        <view class='intro_head'>{{teamIntro.title}}</view>
        <view class='intro_content'>
          {{teamIntro.content}}
        </view>
      </view>
    </view>
    <!-- 搜索加入队伍  -->
    <view class='myteam' wx:if="{{noteam==1}}" hidden='{{hasteam}}'>
      <view class='top_search'>
        <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/return.png' class='backs' bindtap='back'></image>
        <view class='search'>
          <input name='keywords' value='{{keywords}}' bindblur='inputKeywords'></input>
          <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/search.png' bindtap='searchTeam'></image>
        </view>
      </view>
      <!-- 加入队伍  -->
      <view class='joinTeam'  wx:for='{{teamList}}' wx:key=''>
        <view class='team_name'>
          {{item.team_name}}
          <text>({{item.count}}/10)</text>
        </view>
        <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/button_join_in.png' bindtap='joinThis' data-team_id='{{item.team_id}}'></image>
      </view>
      <!-- 加入队伍  -->
      

    </view>
    <!-- 创建队伍  -->
    <view class='myteam'  wx:if="{{noteam==2}}" hidden='{{hasteam}}'>
      <view class='top_search'>
        <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/return.png' class='backs' bindtap='back'></image>
      </view>
      <!-- 队伍规则  -->
      <view class='teamRaceIntro'>
        <view class='intro_head'>{{teamCreateIntro.title}}</view>
        <view class='intro_content'>{{teamCreateIntro.content}}
        </view>
      </view>
      <!-- 建立队伍名称  -->
      <view class='setName'>
        <input name='setname' value='{{team_name}}' bindinput='testLength' maxlength='10' placeholder='队伍名称'></input>
        <view>
          <text>{{team_name_length}}</text>/10</view>
      </view>
      <view class='set'>
        <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/button_determine.png'  bindtap='createTeam'></image>
      </view>
    </view>
    <!-- 邀请好友  -->
    <view class='invite'  wx:if="{{invite}}">
      <view class='invit_name'>
        <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/team name.png'></image>
        <view class='invit_box'>{{myTeam.team_name}}</view>
      </view>
      <view class='member'>(<text>{{myTeam.count}}</text>/10)</view>
      <view>我在 <text class='teamName'>{{myTeam.team_name}}</text> 等你，</view>
      <view>快来加入我们把~</view>
      <image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/button_join.png' wx:if='{{share==1}}' bindtap='joinMyteam'></image>
      <button wx:if='{{share==0}}' open-type='share' plain='true' type='primary' class='share_image'><image src='https://yantian.iron-box.cn/newyantian/Public/minImages/marathon/button_invitation.png'></image></button>
    </view>
    <!-- 队伍已满  -->
    <view class='mask'>
      <view>人数已满，无法邀请好友</view>
    </view>
  </scroll-view>
</view>