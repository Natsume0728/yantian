/* pages/place/place_intro/place_intro.wxss */
@import"../../../wxParse/wxParse.wxss";
.banner image{
  width:100%;
  height:100%;
}
.banner {
  position: absolute;
  top:0;
  left: 0;
  z-index: 80;
  width:100%;
  height:270rpx;
}
/* 介绍主体部分  */
.place_intro{
  position: relative;  
  font-size: 28rpx; 
  padding:48rpx;
  color:#333;
  box-shadow: 0rpx 2rpx 4rpx 4rpx rgba(47,129,212,0.12) ;
  border-radius: 10rpx;
  top:120rpx;  
  z-index: 100; 
  background-color: #fff;
  margin-bottom: 184rpx;
  
}
.place_intro>.list_r{
  width:100%;
  padding:24rpx;
  box-sizing: border-box;

}
.place_intro .list_head{
  font-size: 32rpx;
  font-weight: 700; 
  color:#333;
}
.place_intro>.list_r>.list_cont {
  margin-top: 24rpx;
}
.place_intro>.list_r>.list_cont .infor{
  margin-bottom: 12rpx;
  width:100%;
}
.place_intro>.list_r>.list_cont .local{
  width:28rpx;
  height:28rpx;
  margin-right: 12rpx;
  vertical-align: middle;
  margin-top: 7rpx;
}
.place_intro>.list_r>.list_cont .phone{
  width:28rpx;
  height:28rpx;
  margin-right: 12rpx;
  margin-top: 7rpx;
}

/* 场馆详情  */
.title{
  font-size: 36rpx;
  margin-bottom: 36rpx;
}
.place_item{
  padding: 48rpx;
  box-shadow: 0rpx 2rpx 4rpx 4rpx rgba(47,129,212,0.12) ;
  margin-bottom: 36rpx;
  font-size: 28rpx;
}
.place_item>.place_pic{
  width:100%;
  height:150rpx;
}
.place_pic>image{
  width:100%;
  height:100%;
}
