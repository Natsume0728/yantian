/* 通用样式  */
body{
	padding: 0;
	margin: 0;
}
.yt_container{
	box-sizing:border-box;
	padding: 40rpx;
	width: 100%;
	/* min-height: 800px; */
	background-color: #fff;
  font-size:28rpx;
}
.fl{float:left;}
.fr{float:right}
.ta {
  font-size:14px;
  color:#bbb;
}
.now{
  font-size: 32rpx;
  /* width:70rpx; */
  padding:10rpx 24rpx;
  color:#fff;
  font-weight: 700;
  background-color: #2f81d4;
  border-radius:  30rpx 30rpx 30rpx 0 ;
}

.content{
  box-sizing: border-box;
  padding: 24rpx;
	box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12);
	/* height: 130px; */
	width: 100%;
}
.cont_inp{
  box-sizing: border-box;
  margin-top: 20rpx;
  border: 1rpx solid #2f81d4;
  height:80rpx;
  width:100%;
  line-height: 80rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
  
}
.cont_inp text{
  display: inline-block;
  width:130rpx;
}
.psection{
  font-size: 28rpx;
  color:#c2d6f1;
}
.cont_inp>input{
  box-sizing: border-box;
  height:80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color:#333; 
  width:75%;
  /* border:1rpx solid red; */
  
}
.cont_inp>text{
  color:#2f81d4;
  font-size: 16px;
}
.content2{
  box-sizing: border-box;
  padding: 36rpx 24rpx;
	box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12);
	/* height: 130px; */
	width: 100%;
  margin-top: 36rpx;
}
.now2{
  font-size: 32rpx;
  display: inline-block;
  /* width:230rpx; */
  margin-top: 24rpx;
  padding:10rpx 24rpx;
  color:#fff;
  font-weight: 700;
  background-color: #2f81d4;
  border-radius:  30rpx 30rpx 30rpx 0;
}
.addimg{
  margin-top:24rpx;
  padding:0; 
  color:#2f81d4;
  width:120rpx;
  height:120rpx; 
  border:1rpx solid #2f81d4; 
  border-radius:10rpx;
  display: inline-block;
  margin-right:20rpx;
  position:relative;
}
.hideimg{
  display: none;
}
 .addimg .del{
  position: absolute;
  top:-16rpx;
  right: -16rpx;
} 
.addimg .del>image{
  width:44rpx;
  height:44rpx;
}
.addimg image{
  width:100%;height:100%;
}
.add{
  margin-top: 24rpx;
  padding: 0;
  font-size: 46rpx;
  color:#2f81d4;
  width: 120rpx;
  height:120rpx;
  line-height: 120rpx;
  border: 1rpx solid #2f81d4;
  text-align: center;
  /* vertical-align: middle; */
  border-radius: 10rpx;
  display: inline-block;
}
button{
  margin-top: 80rpx;
  width:36%;
  height:80rpx;
  line-height: 80rpx;
  border:1rpx solid #2f81d4;
  color:#2f81d4;
  background-color: #fff;
}
radio{margin-left:20rpx;transform:scale(.7);}
label{font-size:28rpx}
.duiyuan{margin-top:16rpx;width:84rpx}
