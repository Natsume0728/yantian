.yt_container{
  font-size:28rpx;
}

/* 搜索  */
.yt_search{
  box-sizing: border-box;
	width: 100%;
	height: 60rpx;
  position: relative;
}
.yt_search>input{
  box-sizing:border-box;
	padding-left: 48rpx;
	width: 100%;
	height: 60rpx;
	font-size: 24rpx;
  border: 1rpx solid #2f81d4;
}
.yt_search>button{
  position: absolute;
  right:15rpx;
  top:10rpx;
  height:44rpx;
  width:44rpx;
}
.yt_search>image{
  position: absolute;
  right:15rpx;
  top:10rpx;
  height:44rpx;
  width:44rpx;
}
.psection{
  font-size: 24rpx;
  color:#2f81d4;
}
/*banner  */
.yt_banner{
	width: 100%;
	height: 170rpx;
	margin-top: 48rpx;
}
.yt_banner>image{
	
	width: 100%;
	height:100%;
  
}
/* 活动部分  */
.activity{
  margin-top: 40rpx;
}
.activity>.act_head{
	margin-top: 64rpx;
	/* width: 100%；
	padding-top：8px; */
}

.activity>.act_content{
  box-sizing: border-box;
  position:relative;
  margin-top: 36rpx;
  padding:24rpx 24rpx 12rpx 36rpx;
	box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12);
	/* height: 130px; */
	width: 100%;
   height: 188rpx; 
}
.act_content .cont_head{
  width:76%;
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
} 
.act_content .cont_ct{
  
  font-size: 28rpx;
  color:#999;
   padding-top:24rpx; 
}
.act_content .v_icon{
  padding-bottom: 12rpx;
 
}
.act_content .v_icon>image{
  width:30rpx;
  height:30rpx;
}
.act_content .s_ad{
 height: 30rpx;
 width:30rpx;
 margin-right: 12rpx;
 vertical-align: middle;
 
}
/* 正在进行中  */
.act_content>.now{
  font-size: 24rpx;
  position:absolute;
  top:24rpx;
  right:24rpx;
  /* width:160rpx;
  height:40rpx; */
  padding:14rpx 12rpx;
  background-color: #2f81d4;
  border-radius:  28rpx 28rpx 28rpx 0 ;
  color:#fff;
}
/* 培训部分  */
.trans{
  margin-top: 64rpx;
  margin-bottom: 100rpx;
}
.trans>.tran_content{
  height: 188rpx; 
	width:100%;
	margin-top: 36rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12);
  display: flex;
  justify-content: space-between;
}
.tran_content .tran_pic{
  width:40%;
  height:auto;
  box-sizing: border-box;
  align-self: stretch;
}
.tran_pic image{
  width:100%;
  height:100%;
}
.tran_item image{
  width:30rpx;
  height:30rpx; 
}
.tran_content .tran_item{
  box-sizing:border-box;
  width:60%;
  height:100%;
	padding:24rpx;
	font-size: 14px; 
  overflow: hidden;
}
.tran_content .tran_it_h{
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
  margin-bottom: 24rpx;
}
.tans_txt{
  font-size: 28rpx;
  color:#999;
}
.tans_txt.px_tans_txt{
  min-height: 76rpx;
}
.tans_txt>image{
  width:30rpx;
  height:30rpx;
  margin-top: 6rpx;
}
.text_box{
  margin-left: 12rpx;
  width:86%;
}

/* 底部部分  */
.foot{
  position: fixed;
  bottom: 0;
  width: 100%;
  background:#fff;
  border-top: 2rpx solid #f5f5f5;
  color:#999;
}
.foot>.foot_box{
  width:60%;
  margin: 0 auto;
  padding: 10rpx 0;
}
.foot_box>view {
  text-align: center;
  font-size:14px;
}
.foot_box>view image{
  width:48rpx;
  height:48rpx;
}
.opt{
  color:#2f81d4;
}
/* 活动 培训机构标题  */
.th{
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
}
 .ta{
  font-size: 24rpx;
  color:#999;
}