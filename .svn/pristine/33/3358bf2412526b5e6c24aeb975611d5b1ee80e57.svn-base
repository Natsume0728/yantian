/* pages/actdetails/actdetails.wxss */
@import"../../wxParse/wxParse.wxss";
.content{
  padding:48rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12);
  margin-bottom: 36rpx;
  box-sizing: border-box;
}
.content >.cont_head{
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
}
.content .cont_ct{
  margin-top: 24rpx;
}
.content .cont_ct .v_icon{
  font-size: 28rpx;
  color:#999;
}
.content .cont_ct .v_icon image{
  width:30rpx;
  height:30rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}
.cont_c{
  width:100%;
  font-size: 24rpx;
  color:#333;
  line-height: 44rpx;
}

button.sign{
  width:250rpx;
  padding: 0 84rpx;
   margin-top: 36rpx; 
  font-size:36rpx;
  color: #2f81d4;
  background-color: #fff;
  /* box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(100,200,150, 0.2); */
  border:1rpx solid #2f81d4;
}
button.over{
  margin-top: 36rpx; 
  width:250rpx;
  padding:0 20rpx;
  font-size:32rpx;
  color: #999;
  box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12);
  border:1rpx solid #999;
}