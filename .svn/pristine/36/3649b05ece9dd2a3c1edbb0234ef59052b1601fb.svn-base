/* pages/act_trans/act_trans.wxss */
.tran_content{
  /* height:175rpx; */
  height: 188rpx; 
	width:100%;
	margin-bottom: 36rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12);
  display: flex;
  justify-content: space-between;
}
.tran_content .tran_pic{
  width:40%;
  height: auto;
  align-self: stretch;
}
.tran_pic>image{
  width:100%;
  height:100%;
}
.tran_item image{
  width:30rpx;
  height:30rpx;
  margin-top: 6rpx;
}
.text_box{
  margin-left: 12rpx;
  width:86%;
}
.tran_content .tran_item{
  box-sizing:border-box;
  width:60%;
  height:100%;
	padding:24rpx;
	font-size: 14px; 
  /* overflow: hidden; */
}
.tran_content .tran_it_h{
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
  margin-bottom: 24rpx;
}
.tran_content .tans_txt{
  padding-left: 12rpx;
  font-size: 28rpx;
  color:#999;
}