/* pages/repair/repair/repair.wxss */
/* 报修须知  */
.content_t{
  box-sizing: border-box;
  padding: 48rpx;
	box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12) ;
	/* height: 130px; */
	width: 100%;
  margin-bottom: 36rpx;
  font-size: 28rpx;
  color:#333;
}
.title{
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 48rpx;
}
.c_now{
  font-size: 32rpx;
  width:140rpx;
  padding:10rpx 24rpx;
  color:#fff;
  font-weight: 700;
  background-color: #2f81d4;
  border-radius:  30rpx 30rpx 30rpx 0 ;
}
.content{
  box-sizing: border-box;
  padding: 24rpx;
	box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12) ;
	/* height: 130px; */
	width: 100%;
  margin-bottom: 36rpx;
}
.cont_inp{
  box-sizing: border-box;
  margin-top: 20rpx;
  border: 1rpx solid #2f81d4;
  height:80rpx;
  width:100%;
  line-height: 80rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
  
}
.psection{
  font-size: 28rpx;
  color:#c2d6f1;
}
.cont_inp>input{
  box-sizing: border-box;
  height:80rpx;
  line-height: 80rpx;
   font-size: 28rpx;
  color:#333; 
  width:80%;
  /* border:1rpx solid red; */
  
}
.cont_inp>text{
  color:#2f81d4;
  font-size: 16px;
}
.content2{
  box-sizing: border-box;
  padding: 36rpx 24rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12) ;
	/* height: 130px; */
	width: 100%;
}
.addimg{
  margin-top:24rpx;
  padding:0; 
  color:#2f81d4;
  width:120rpx;
  height:120rpx; 
  border:1rpx solid #2f81d4; 
  border-radius:10rpx;
  display: inline-block;
  margin-right:20rpx;
  position:relative;
}
.hideimg{
  display: none;
}
.addimg .del{
  color:red;  
  position:absolute;top:-20rpx;right:-8rpx;
}
.addimg image{
  width:100%;height:100%;
}
.add{
  margin-top: 24rpx;
  padding: 0;
  font-size: 46rpx;
  color:#2f81d4;
  width: 120rpx;
  height:120rpx;
  line-height: 120rpx;
  border: 1rpx solid #2f81d4;
  text-align: center;
  /* vertical-align: middle; */
  border-radius: 10rpx;
  display: inline-block;
}
button{
  margin-top: 80rpx;
  width:90%;
  height:80rpx;
  line-height: 80rpx;
  border:1rpx solid #2f81d4;
  color:#fff;
  background-color: #2f81d4;
  margin-bottom: 150rpx;
}
/* 底部部分  */
.foot{
  position: fixed;
  bottom: 0;
  width: 100%;
  background:#fff;
  border-top: 1rpx solid #f5f5f5;
  font-size: 24rpx;
  z-index: 100;
}
.foot>.foot_box{
  display: flex;
  width:100%;
  justify-content:center;
}
.foot_box>view image{
 width:48rpx;
 height:48rpx;
 margin: 0;
}
.foot_flex{
  width:33%;
  text-align: center;
}
/* 遮罩层  */
.mask{
	width:100%;
	height:100%;
	position: fixed;
	background-color:rgba(0, 0, 0, 0.4);
	top:0;
	left:0;
	 
  z-index: 100;
}
.mask_box{
	width:70%;
	
	position: absolute;
	background-color: #fff;
	top:50%;
	left:50%;
	transform: translate(-50%, -50%);
  font-size: 28rpx;
  color:#333;
  text-align: center;
  padding: 48rpx 24rpx 12rpx;
}
.mask_box>.mask_head{
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 36rpx;
}
.mask_box>.mask_cont{
  background-color: #f3f9ff;
  margin-bottom: 12rpx;
  padding: 24rpx;
}
.current{
  background-color: #2f81d4 !important;
  color: #fff;
}