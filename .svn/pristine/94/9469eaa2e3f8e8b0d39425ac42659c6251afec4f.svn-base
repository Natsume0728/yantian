/* pages/joinus/joinus.wxss */
.banner image{
  width:100%;
  height:200rpx;
}
.banner {
  position: relative;
  z-index: 80;
}
.yt_container{
 padding-top: 0rpx;

  
}
/* 主体部分  */
.ass_intro{
   position: relative;  
  font-size: 28rpx; 
  padding:48rpx;
  color:#333;
  box-shadow: 2rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12) ;
  border-radius: 10rpx;
    top:-46rpx;  
   z-index: 100; 
   background-color: #fff;
   margin-bottom: 36rpx;
  
}
.ass_intro >.intro_head{
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
 margin-bottom: 48rpx;
}
/* 报名  */
.cont{
  padding:48rpx 36rpx;
}
.cont_inp{
  box-sizing: border-box;
  margin-top: 20rpx;
  border: 2rpx solid #e0eefb;
  height:80rpx;
  width:100%;
  line-height: 80rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
  background-color: #f3f9ff;
  
}
.psection{
  font-size: 28rpx;
  color:#c2d6f1;
}
.cont_inp>input{
  box-sizing: border-box;
  height:80rpx;
  line-height: 80rpx;
   font-size: 28rpx;
  color:#333; 
  width:80%;
  /* border:1rpx solid red; */
  
}
.cont_inp>text{
  color:#2f81d4;
  font-size: 16px;
}
/* button  */
button{
margin-top:28rpx;
color:#fff;
background-color:#2f81d4;
font-size:32rpx;
height:82rpx;
line-height:82rpx;
text-align: center;
