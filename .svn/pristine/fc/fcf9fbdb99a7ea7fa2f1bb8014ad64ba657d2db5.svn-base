/* pages/association_list/association_list.wxss */
.place_title{
  font-size: 28rpx;
  width:400rpx;
  margin:0 auto;
  border: 2rpx solid #2f81d4;
  border-radius: 10rpx;
  height:60rpx;
  line-height: 60rpx;
  overflow:hidden;
}

.comn{
  width:200rpx;
  height:60rpx;
  text-align: center;
  background-color: #fff;
  color:#2f81d4;
}
.now{
  width:200rpx;
  height:60rpx;
  text-align: center;
  background-color: #2f81d4;
  color:#fff;
}
/* 场馆列表  */
.place_list{
  margin-top: 48rpx;
  font-size: 28rpx; 
  color:#999;
  margin-bottom: 36rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx rgba(47,129,212,0.12) ;
}
.place_list>.list_l{
  width:30%;
  height:214rpx;
}
.list_l>image{
  width:100%;
  height:100%;
}
.place_list>.list_r{
  width:68%;
  padding:24rpx;
  box-sizing: border-box;

}
.place_list .list_head{
  font-size: 32rpx;
   font-weight: 700; 
  color:#333;
}
.place_list>.list_r>.list_cont {
  margin-top: 24rpx;
}
.place_list>.list_r>.list_cont .infor{
  margin-bottom: 12rpx;
}
.place_list>.list_r>.list_cont .local{
  width:28rpx;
  height:28rpx;
  margin-right: 12rpx;
  vertical-align: middle;
  margin-top: 7rpx;
}
.place_list>.list_r>.list_cont .phone{
  width:28rpx;
  height:28rpx;
  margin-right: 12rpx;
  margin-top: 7rpx;
}
/* 底部部分  */
.foot{
  position: fixed;
  bottom: 0;
  width: 100%;
  background:#fff;
  border-top: 1rpx solid #f5f5f5;
  font-size: 24rpx;
  z-index: 100;
}
.foot>.foot_box{
  display: flex;
  width:100%;
  justify-content:center;
}
/* .foot_box>view {
  
